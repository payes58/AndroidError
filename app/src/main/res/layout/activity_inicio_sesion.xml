<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EDEC"
    tools:context=".InicioSesion">

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:fontFamily="@font/poppins_bold"
      android:text="Iniciar Sesión"
      android:textAlignment="center"
      android:textColor="#85AF4B"
      android:textSize="34sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnIngresar1"
      android:layout_width="142dp"
      android:layout_height="50sp"
      android:layout_marginTop="40dp"
      android:backgroundTint="@color/white"
      android:fontFamily="@font/poppins_bold"
      android:onClick="Mensaje"
      android:text="@string/ingresar"
      android:textColor="@color/black"
      app:cornerRadius="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtContraseña" />


  <EditText
      android:id="@+id/txtContraseña"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:backgroundTint="@color/black"
      android:ems="10"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

  <EditText
      android:id="@+id/txtUsuario"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="92dp"
      android:backgroundTint="@color/black"
      android:ems="10"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="116dp"
      android:layout_height="36dp"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/poppins_bold"
      android:text="@string/usuario"
      android:textColor="@color/black"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/txtUsuario"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      app:layout_constraintVertical_bias="1.0" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="36dp"
      android:layout_height="45dp"
      android:layout_marginStart="96dp"
      android:layout_marginTop="52dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtUsuario"
      app:srcCompat="@drawable/key" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="35dp"
      android:layout_height="45dp"
      android:layout_marginTop="48dp"
      app:layout_constraintEnd_toStartOf="@+id/textView4"
      app:layout_constraintHorizontal_bias="0.892"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      app:srcCompat="@drawable/user" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:fontFamily="@font/poppins_bold"
      android:text="@string/contraseña"
      android:textColor="@color/black"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.556"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtUsuario" />

  <TextView
      android:id="@+id/lblRegis"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:onClick="onClick"
      android:text="¿No tienes una cuenta?"
      android:textColor="#85AF4B"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.334"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtOlvide" />

  <TextView
      android:id="@+id/txtOlvide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:onClick="onClick"
      android:text="@string/olvid_mi_contrase_a"
      android:textColor="#85AF4B"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnIngresar1" />

  <TextView
      android:id="@+id/lblRegis2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:onClick="onClick"
      android:text=" Regístrate"
      android:textColor="#58752A"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/lblRegis"
      app:layout_constraintTop_toBottomOf="@+id/txtOlvide" />

  <ImageView
      android:id="@+id/imgAtras"
      android:layout_width="308dp"
      android:layout_height="103dp"
      android:layout_marginBottom="52dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.495"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtOlvide"
      app:layout_constraintVertical_bias="1.0"
      app:srcCompat="@drawable/logo3" />

</androidx.constraintlayout.widget.ConstraintLayout>